# DIGIFAZ - Template de variables d'environnement
# Copiez ce fichier vers environments/[env]/.env et remplissez les vraies valeurs

# Application
NODE_ENV=production
PORT=3000

# Database Configuration
DB_HOST=db
DB_PORT=3306
DB_USERNAME=your_db_user
DB_PASSWORD=your_secure_password
DB_DATABASE=your_database_name

# TypeORM Configuration
TYPEORM_SYNCHRONIZE=false
TYPEORM_LOGGING=false
TYPEORM_DROP_SCHEMA=false

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRATION=24h

# API Configuration
API_PREFIX=api/v1

# CORS Configuration
CORS_ORIGIN=*

# Logging
LOG_LEVEL=info

# Docker Configuration
APP_EXTERNAL_PORT=3001
DB_EXTERNAL_PORT=3307
PHPMYADMIN_EXTERNAL_PORT=8100

# Docker MySQL Configuration
MYSQL_ROOT_PASSWORD=your_mysql_root_password
MYSQL_DATABASE=your_database_name
MYSQL_USER=your_mysql_user
MYSQL_PASSWORD=your_mysql_password

# phpMyAdmin Configuration
PMA_HOST=db
PMA_PORT=3306
PMA_USER=your_mysql_user
PMA_PASSWORD=your_mysql_password

# Payment Gateway Configuration
WAVE_API_URL=https://api.wave.com/v1
WAVE_API_KEY=your_wave_api_key
WAVE_WEBHOOK_SECRET=your_wave_webhook_secret

ORANGE_MONEY_API_URL=https://api.orange.com/v1
ORANGE_MONEY_CLIENT_ID=your_orange_client_id
ORANGE_MONEY_CLIENT_SECRET=your_orange_client_secret

MTN_API_URL=https://momodeveloper.mtn.com
MTN_USER_ID=your_mtn_user_id
MTN_API_KEY=your_mtn_api_key
MTN_PRODUCT_KEY=your_mtn_product_key

MOOV_API_URL=https://api.moov.money/v1
MOOV_CLIENT_ID=your_moov_client_id
MOOV_CLIENT_SECRET=your_moov_client_secret

# Email Configuration
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=your_email@domain.com
MAIL_PASS=your_email_password
MAIL_FROM=noreply@domain.com

# SMS Configuration
SMS_PROVIDER=twilio
SMS_API_KEY=your_sms_api_key
SMS_API_SECRET=your_sms_secret
SMS_FROM=+1234567890

# File Upload Configuration
UPLOAD_DEST=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf

# QR Code Configuration
QR_CODE_BASE_URL=https://your-domain.com/qr
QR_CODE_EXPIRY_DAYS=365